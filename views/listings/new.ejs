<% layout("./layouts/boilerplate.ejs") %>
<body>
    <br>
    <h3>Create a new listing</h3>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="post" action="/listings"  class="needs-validation" novalidate >
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="Enter a catchy name:" type="text" class="form-control" required>
            <div class="valid-feedback">Title Looks Good</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">description</lable>
            <textarea name="listing[description]" class="form-control" required ></textarea>
            <div class="invalid-feedback">Please Enter a short description</div>
        </div>
        
        <div class="mb-3">
            <lable for="Image filename" class="form-label">Image filename</lable>
            <input name="listing[image][filename]" placeholder="Enter The filename link:" type="text" class="form-control">
        </div>
        

        <div class="mb-3">
            <lable for="image" class="form-label"> Upload listing Image</lable>
            <input name="listing[image][url]"  type="text" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="Price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="Enter the Price:"  class="form-control" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input name="listing[country]" placeholder="Enter The country name:" type="text" class="form-control" required>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
        </div>
       
        <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
            <input name="listing[location]" placeholder="Enter The location:" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div> 
        
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
</div>
</body>
